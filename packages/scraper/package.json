{
  "name": "@gusbot/scraper",
  "version": "1.0.0",
  "description": "A JavaScript scraper for SteamGifts group statistics",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "fetch-giveaways": "tsx src/scripts/generate-giveaways-data.ts",
    "fetch-users": "tsx src/scripts/generate-members-data.ts",
    "fetch-proof-of-play": "tsx src/scripts/get-proof-of-play-data.ts",
    "check-hltb": "tsx src/scripts/get-hltb.ts",
    "fetch-game-data": "tsx src/api/fetch-game-prices.ts",
    "get-giveaway": "tsx src/scripts/get-proof-of-play-data.ts",
    "check-steam-game": "tsx src/utils/check-steam-game.ts",
    "get-html-page": "tsx src/utils/get-html-page.ts",
    "generate-insights": "tsx src/utils/generate-insights.ts",
    "generate-website-data": "tsx src/scripts/generate-all-data.ts",
    "generate-alltime-website-data": "FETCH_ALL_PAGES=true tsx src/scripts/generate-all-data.ts"
  },
  "dependencies": {
    "@types/cheerio": "^0.22.35",
    "cheerio": "^1.1.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^17.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/papaparse": "^5.3.16",
    "@vitest/coverage-v8": "^1.4.0",
    "papaparse": "^5.5.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}