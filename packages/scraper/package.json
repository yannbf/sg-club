{
  "name": "@gusbot/scraper",
  "version": "1.0.0",
  "description": "A JavaScript scraper for SteamGifts group statistics",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "pnpm run --filter website dev",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "generate-giveaways-data": "tsx src/scripts/generate-giveaways-data.ts",
    "check-deleted-giveaways": "tsx src/scripts/check-deleted-giveaways.ts",
    "members": "tsx src/scripts/generate-members-data.ts",
    "generate-game-data": "tsx src/scripts/generate-game-data.ts",
    "get-proof-of-play-data": "tsx src/scripts/get-proof-of-play-data.ts",
    "check-hltb": "tsx src/scripts/get-hltb.ts",
    "fetch-game-prices": "tsx src/api/fetch-game-prices.ts",
    "get-playtime-data": "tsx src/scripts/get-playtime-data.ts",
    "get-html-page": "tsx src/utils/get-html-page.ts",
    "generate-insights": "tsx src/utils/generate-insights.ts",
    "data": "tsx src/scripts/generate-all-data.ts",
    "playtime": "tsx src/scripts/generate-playtime-data.ts",
    "generate-alltime-website-data": "FETCH_ALL_PAGES=true tsx src/scripts/generate-all-data.ts"
  },
  "dependencies": {
    "@types/cheerio": "^0.22.35",
    "cheerio": "^1.1.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^17.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/papaparse": "^5.3.16",
    "@vitest/coverage-v8": "^3.2.4",
    "papaparse": "^5.5.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}