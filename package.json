{
  "name": "steamgifts-scraper",
  "version": "1.0.0",
  "description": "A JavaScript scraper for SteamGifts group statistics",
  "type": "module",
  "main": "steamgifts-scraper.js",
  "scripts": {
    "start": "node steamgifts-scraper.js",
    "fetch-giveaways": "tsx src/scrapers/fetch-steamgifts-html.ts",
    "fetch-users": "tsx src/scrapers/fetch-users.ts",
    "check-steam-game": "tsx src/utils/check-steam-game.ts",
    "generate-insights": "tsx src/utils/generate-insights.ts",
    "run-all": "echo 'ðŸš€ Starting full analysis pipeline...' && START_TIME=$(date +%s) && FETCH_ALL_PAGES=true npm run fetch-giveaways && npm run fetch-users && npm run generate-insights && END_TIME=$(date +%s) && echo \"âœ… Full analysis completed in $((END_TIME - START_TIME)) seconds\"",
    "build": "tsc",
    "dev": "tsx watch src/scrapers/fetch-steamgifts-html.ts",
    "dev-users": "tsx watch src/scrapers/fetch-users.ts"
  },
  "dependencies": {
    "@types/cheerio": "^0.22.35",
    "cheerio": "^1.1.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^17.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "steamgifts",
    "scraper",
    "automation"
  ],
